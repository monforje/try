{
  "name": "balanced-news-app",
  "version": "1.0.0",
  "description": "A mobile app for balanced news consumption from different political perspectives",
  "main": "node_modules/expo/AppEntry.js",
  "author": "Balanced News Team",
  "license": "MIT",
  "keywords": [
    "news",
    "politics",
    "bias",
    "balanced",
    "react-native",
    "expo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/balanced-news-app.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/balanced-news-app/issues"
  },
  "homepage": "https://github.com/your-org/balanced-news-app#readme",
  "scripts": {
    "start": "expo start",
    "start:dev": "expo start --dev-client",
    "start:tunnel": "expo start --tunnel",
    "start:lan": "expo start --lan",
    "start:localhost": "expo start --localhost",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "build:all": "eas build --platform all",
    "submit:android": "eas submit --platform android",
    "submit:ios": "eas submit --platform ios",
    "update": "eas update",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "detox test",
    "test:e2e:build": "detox build",
    "clean": "expo r -c",
    "clean:cache": "npm start -- --reset-cache",
    "clean:modules": "rm -rf node_modules && npm install",
    "prebuild": "expo prebuild",
    "prebuild:clean": "expo prebuild --clean",
    "doctor": "expo doctor",
    "install:pods": "cd ios && pod install && cd ..",
    "postinstall": "expo install --fix"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/slider": "4.5.6",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/stack": "^6.3.23",
    "axios": "^1.6.8",
    "expo": "^53.0.12",
    "expo-constants": "~17.1.6",
    "expo-font": "~13.3.1",
    "expo-linking": "~7.1.5",
    "expo-splash-screen": "~0.30.9",
    "expo-status-bar": "~2.2.3",
    "expo-updates": "~0.28.15",
    "react": "19.0.0",
    "react-native": "0.79.4",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/runtime": "^7.25.6",
    "@eslint/js": "^9.9.0",
    "@react-native/eslint-config": "^0.75.3",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.0.0",
    "@types/react-native": "0.73.0",
    "detox": "^20.26.2",
    "dotenv": "^16.4.5",
    "eas-cli": "^12.4.0",
    "eslint": "^8.57.0",
    "eslint-config-expo": "~9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.7.0",
    "jest-expo": "~53.0.7",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.3.3",
    "typescript": "~5.8.3"
  },
  "overrides": {
    "chromium-edge-launcher": "^0.3.0",
    "glob": "^10.4.5",
    "rimraf": "^5.0.5",
    "react-refresh": "~0.14.0"
  },
  "resolutions": {
    "@types/react": "~19.0.0",
    "@types/react-dom": "~19.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "expo": {
    "install": {
      "exclude": [
        "react-native-safe-area-context"
      ]
    }
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/babel.config.js",
      "!**/metro.config.js",
      "!**/.expo/**"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "expo",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "react-hooks/exhaustive-deps": "warn",
      "react/prop-types": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 100,
    "endOfLine": "lf"
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "device": "simulator",
        "app": "ios.debug"
      },
      "android.emu.debug": {
        "device": "emulator",
        "app": "android.debug"
      }
    },
    "apps": {
      "ios.debug": {
        "type": "ios.app",
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/BalancedNews.app"
      },
      "android.debug": {
        "type": "android.apk",
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk"
      }
    },
    "devices": {
      "simulator": {
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 14"
        }
      },
      "emulator": {
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_3a_API_30_x86"
        }
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
