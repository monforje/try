{
  "name": "balanced-news-backend",
  "version": "1.0.0",
  "description": "API Gateway for Balanced News - serving personalized news feeds with bias detection",
  "main": "src/index.js",
  "type": "module",
  "author": "Balanced News Team",
  "license": "MIT",
  "keywords": [
    "news",
    "api",
    "gateway",
    "bias",
    "balanced",
    "nodejs",
    "express"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/balanced-news-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/balanced-news-backend/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "nodemon -r dotenv/config src/index.js dotenv_config_path=../.env",
    "dev:debug": "nodemon --inspect -r dotenv/config src/index.js dotenv_config_path=../.env",
    "start": "node src/index.js",
    "start:prod": "NODE_ENV=production node src/index.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "build": "echo 'No build step required for Node.js'",
    "validate": "npm run lint && npm run test",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "health-check": "curl -f http://localhost:3001/health || exit 1",
    "docker:build": "docker build -t balanced-news-backend .",
    "docker:run": "docker run -p 3001:3001 balanced-news-backend",
    "deploy": "npm run validate && npm run build",
    "postinstall": "node scripts/postinstall.js"
  },
  "dependencies": {
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-slow-down": "^2.0.3",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "axios": "^1.6.8",
    "axios-retry": "^4.5.0",
    "redis": "^4.6.7",
    "pg": "^8.11.5",
    "pg-pool": "^3.6.2",
    "dotenv": "^16.4.5",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0",
    "node-cron": "^3.0.3",
    "prom-client": "^15.1.3",
    "jsdom": "^25.0.0",
    "@mozilla/readability": "^0.5.0",
    "sanitize-html": "^2.13.0",
    "url-parse": "^1.5.10",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.3.3",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "@types/jest": "^29.5.12",
    "nock": "^13.5.5",
    "redis-memory-server": "^0.10.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/config/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:security/recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": ["warn", { "allow": ["warn", "error", "info"] }],
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "prefer-const": "error",
      "no-var": "error",
      "object-shorthand": "error",
      "prefer-template": "error",
      "template-curly-spacing": "error",
      "arrow-spacing": "error",
      "node/no-missing-import": "off",
      "node/no-unsupported-features/es-syntax": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 100,
    "endOfLine": "lf"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}